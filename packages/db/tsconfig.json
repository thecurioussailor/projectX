{
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "declaration": true,         // ✅ Generate Type Definitions
    "declarationMap": true,      // ✅ Helps with debugging
    "emitDeclarationOnly": false,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
